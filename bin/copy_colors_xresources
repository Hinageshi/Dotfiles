#!/bin/bash
> .Xresources
echo "! X colors." >> .Xresources
echo "! Generated by 'wal'" >> .Xresources

for i in "background" "foreground" "cursor"
do
	value=`jq ".special.$i" .cache/wal/colors.json | sed -e 's/^"//' -e 's/"$//'`
	echo "*$i:	$value" >> .Xresources
       	echo "*.$i:	$value" >> .Xresources	
done

echo "" >> .Xresources
echo "! Colors 0-15." >> .Xresources

for i in {0..15}
do
   	value=`jq ".colors.color$i" .cache/wal/colors.json | sed -e 's/^"//' -e 's/"$//'`
        echo "*color$i:	$value" >> .Xresources
        echo "*.color$i:	$value" >> .Xresources
done

xrdb ~/.Xresources
i3-msg reload > /dev/null # mod+Shift+c
